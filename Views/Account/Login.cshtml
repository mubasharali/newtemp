@model Inspinia_MVC5_SeedProject.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>dealkar.pk | Login</title>
    <meta name="google-site-verification" content="orv0gPJPIeitRMIAGV_0VbMTx3DfWKJa32R4E9Vrr20" />
    <link rel="icon" href="~/Images/others/favicon.png">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/myStyles.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h3>Welcom to <a href="/" class="brand-style" style="font-weight:800">dealkar.pk</a> </h3>
                @*<small>Use a local account to log in.</small>*@
                <small class="req">@TempData["LError"]</small>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="col-md-3 control-label" >Email</label>
                    @*@Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })*@
                    <div class="col-md-9">
                        <input class="form-control" type="email" value="@ViewBag.email" name="UserName" id="UserName" />
                        @*@Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })*@
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("ForgetPassword", "ForgetPassword", new { ReturnUrl = ViewBag.ReturnUrl }) ?
                </p>
                <p>
                    @Html.ActionLink("Register", "Register", new { ReturnUrl = ViewBag.ReturnUrl }) if you don't have a account.
                </p>
            }
        </div>
        <h3 style="text-align:center">OR</h3>
        <section id="externalLogins">
            @Html.Partial("../Account/_ExternalLoginsListPartial", new Inspinia_MVC5_SeedProject.Models.ExternalLoginViewModel { Action = "ExternalLogin", ReturnUrl = HttpContext.Current.Request.Url.AbsolutePath })
        </section>

    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
