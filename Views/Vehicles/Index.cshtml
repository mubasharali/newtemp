    }
    ViewBag.Title = conditionTitle + (ViewBag.subcategory == null ? ViewBag.category : ViewBag.subcategory) + " " + (Session["City"] == null || Session["City"].ToString() == "All Pakistan" ? "" : " in " + Session["City"].ToString());
